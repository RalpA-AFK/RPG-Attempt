public class Priest extends Character {
	
	public Priest(String name, Weapon weapon) {
		super(name, 65, weapon);
	}

	
	
	public void attack() {
		System.out.println(name + " prays with their rosary: (" + weapon.getName() + ") dealing " + weapon.getDmg() + " damage and healing their  teammates for " + (weapon.getDmg() / 2) + " health.\n" );
	}
	
	public void defend() {
		System.out.println(name + " cannot evade the attack causing him to take critical damage.");
	}
}
